<% include ../partials/header %>

<div class="container">
    <div class="row newForms">
        <h1>Edit Comments</h1>
            
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment.id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                </div>
                 <div class="form-group">
                     <button class="btn btn-lg btn-primary btn-block">Edit</button>
                 </div>
            </form>
            
            <a href="/campgrounds">Go Back</a>
    </div>
</div>
