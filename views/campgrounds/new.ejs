<% include ../partials/header %>

<div class="container">
    <div class="row newForms">
        <h1>Create a new Campground</h1>
            
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Add Campground Name">
                </div>
                 <div class="form-group">
                     <input class="form-control" type="text" name="image" placeholder="Add Image URL">
                 </div>
                 <div class="form-group">
                     <input class="form-control" type="number" name="price" placeholder="Add Price" min="0.01" step="0.01">
                 </div>
                 <div class="form-group">
                     <input class="form-control" type="text" name="description" placeholder="Add Description">
                 </div>
                 <div class="form-group">
                     <button class="btn btn-lg btn-primary btn-block">Submit</button>
                 </div>
            </form>
            <a class="pull-left" href="/campgrounds">Go Back</a>
    </div>
</div>
<% include ../partials/footer %>